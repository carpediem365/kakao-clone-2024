<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="../css/styles.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Sign Up for Kokoa Talk</title>
</head>
<body>
    <header class="welcome-header">
        <h1 class="welcome-header__title">Sign Up for KakaoTalk</h1>
        <p class="welcome-header__text">Create your Kakao Account</p>
    </header>

    <form action="/signup" method="post" id="signup-form">
        <div>
            <input name="email" type="email" id="email" placeholder="Email" required 
                   onfocusout="checkEmail()">
            <span id="email-msg"></span>
        </div>

        <input name="password" type="password" placeholder="Password" required />
        <input name="phonenumber" type="text" placeholder="Phone number" required />
        <input name="username" type="text" placeholder="Name" required />
        <input type="submit" value="Sign Up" />
    </form>

    <div id="no-mobile">
        <span>Your screen is too big</span>
    </div>

    <script src="https://kit.fontawesome.com/5fa4e79d0c.js" crossorigin="anonymous"></script>
    <script>
        function checkEmail() {
            var email = $('#email').val();
            console.log('체크1Checking email:', email); // 로그 추가
            $.ajax({
                url: '/signup/check-email',
                method: 'POST',
                data: { email: email },
                success: function(response) {
                    $('#email-msg').text(response.message);
                },
                error: function() {
                    $('#email-msg').text('Error checking email.');
                }
            });
        }
    </script>
</body>
</html>
